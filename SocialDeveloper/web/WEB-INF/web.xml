<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>outline.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.homepage_url</param-name>
        <param-value>index</param-value>
    </context-param>
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>Controller.index</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Controller.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>Controller.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profilo</servlet-name>
        <servlet-class>Controller.profilo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modificaProfilo</servlet-name>
        <servlet-class>Controller.modificaProfilo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userSkills</servlet-name>
        <servlet-class>Controller.userSkills</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>nuovoProgetto</servlet-name>
        <servlet-class>Controller.nuovoProgetto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userProjects</servlet-name>
        <servlet-class>Controller.userProjects</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>paginaProgetto</servlet-name>
        <servlet-class>Controller.paginaProgetto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>partecipazioni</servlet-name>
        <servlet-class>Controller.partecipazioni</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>paginaRisultati</servlet-name>
        <servlet-class>Controller.paginaRisultati</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>Controller.logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profilo</servlet-name>
        <url-pattern>/profilo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modificaProfilo</servlet-name>
        <url-pattern>/modificaProfilo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userSkills</servlet-name>
        <url-pattern>/userSkills</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>nuovoProgetto</servlet-name>
        <url-pattern>/nuovoProgetto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userProjects</servlet-name>
        <url-pattern>/userProjects</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>paginaProgetto</servlet-name>
        <url-pattern>/paginaProgetto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>partecipazioni</servlet-name>
        <url-pattern>/partecipazioni</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>paginaRisultati</servlet-name>
        <url-pattern>/paginaRisultati</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>jdbc/igw</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
